<script src="/public/public.js"></script>

<div id="users-list">
  <h1>TheFesseBook, toutes les têtes de cul de votre région</h1>
  <% users.forEach((user) => {%>
  <div>
    <a href="/users/<%- user.slug %>">
      <img src="/public/uploads/<%- user.avatar %>" />
      <%- user.firstName %> <%- user.lastName %>
    </a>
    <% if(authUser.role === "ADMIN") {%>
    <a href="/users/edit/<%- user.slug %>">Editer l'utilisateur</a>
    <%} %>
  </div>
  <% }); %>
  <hr />
  <% if(authUser.role === "ADMIN") {%>
  <a href="/users">Créez votre profil !</a>
  <%} %>
</div>
